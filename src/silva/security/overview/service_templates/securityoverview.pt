<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/@@standard_macros/page">

  <body>
    <div metal:fill-slot="body">

    <h1>Security overview</h1>

    <form tal:attributes="action view/form_path" method="get">
        <fieldset>
            <table>
                <tr>
                    <td><label for="path">Path</label></td>
                    <td>
                        <input type="text" name="path" size="60"
                        tal:attributes="value python: request.get('path', view.root_path)" />
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td><label for="path">Roles</label></td>
                    <td>
                        <input type="text" name="roles" size="60"
                        tal:attributes="value python: request.get('roles')" />
                    </td>
                    <td>Roles comma separated</td>
                </tr>
                <tr>
                    <td><label for="path">User</label></td>
                    <td>
                        <input type="text" name="user" size="60"
                        tal:attributes="value python: request.get('user')" />
                    </td>
                    <td></td>
                </tr>
            </table>
            <div>
                <input type="submit" value="search" />
            </div>
        </fieldset>
    </form>

    <div class="message" tal:condition="python: not(view.entries)">
        No information available.
    </div>

    <div class="nav" tal:content="structure view/batch" />

    <table style="width: 100%" class="results" tal:condition="view/entries">
        <tr class="list-header">
            <td><div class="list-item">user</div></td>
            <td><div class="list-item">role</div></td>
        </tr>
        <tal:block tal:repeat="entry view/entries">
            <tr class="row-hilite">
                <td style="border-top: 1px solid #ccc" colspan="2">
                    <a 
                        tal:attributes="href python: view.smi_security_url(entry)"
                        tal:content="python: '/'.join(entry.getPhysicalPath())" />
                </td>
            </tr>
            <tal:block tal:repeat="data python: view.unpack_entry(entry)">
            <tr class="row-normal">
                <td><div tal:content="python: data['user']" /></td>
                <td><div tal:content="python: data['role']" /></td>
            </tr>
            </tal:block>
        </tal:block>
    </table>

    <div class="nav" tal:content="structure view/batch" />


    </div>
  </body>
</html>
